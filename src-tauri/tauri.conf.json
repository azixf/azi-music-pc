{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5237",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "4U Music",
    "version": "1.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://**"]
      },
      "fs": {
        "all": true,
        "scope": ["*"],
        "writeFile": true
      },
      "globalShortcut": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Entertainment",
      "copyright": "Designed By azi0427@163.com",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.azi.4u",
      "longDescription": "a music desktop app cross app platforms built by tauri",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "a music app",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        },
        "allowDowngrades": false
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 640,
        "title": "4U",
        "width": 960,
        "minHeight": 640,
        "minWidth": 960,
        "decorations": false,
        "center": true,
        "visible": false,
        "transparent": true
      },
      {
        "fullscreen": false,
        "decorations": false,
        "center": true,
        "visible": true,
        "height": 200,
        "width": 540,
        "resizable": false,
        "label": "splashscreen",
        "url": "splash.html"
      }
    ]
  }
}
